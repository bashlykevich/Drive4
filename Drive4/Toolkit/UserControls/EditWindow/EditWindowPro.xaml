<Window x:Class="Drive4.Toolkit.UserControls.EditWindow.EditWindowPro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowName" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="3"
            Orientation="Horizontal">
            <Button Name="btnSave"
                    Width="50"
                    Margin="2"
                    Content="Save"
                    Click="btnSave_Click"/>
            <Button Name="btnCancel"
                    Width="50"
                    Margin="2"
                    Content="Cancel"
                    Click="btnCancel_Click"/>
        </StackPanel>
        <Grid
            Name="grContent"
            Grid.Row="1"></Grid>
    </Grid>
</Window>
